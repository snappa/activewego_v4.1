<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, {:role => "form"}) do |f| %>
      <%= render 'fields', f: f %>
      <%= f.submit "Create my account", class: "col-md-6 btn btn-lg btn-primary" %>
    <% end %>
  </div>
</div>
